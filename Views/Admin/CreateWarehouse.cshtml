@model Backend.Models.Warehouse

@{
    ViewData["Title"] = "إضافة مستودع";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="font-weight-light my-2">إنشاء مستودع جديد</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CreateWarehouse">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-floating mb-3">
                            <label asp-for="Name" class="form-label">اسم المستودع</label>
                            <input asp-for="Name" class="form-control" placeholder="أدخل اسم المستودع الجديد" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <button type="submit" class="btn btn-success px-4">إنشاء الآن</button>
                            <a asp-action="Warehouses" class="btn btn-outline-secondary">العودة للقائمة</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
